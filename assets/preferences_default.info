; Default system configuration file
;
; Notation style is to upper CamelCase grouping keys, and to lower case and
; underscore delimiter keys with assigned values.
;
; Although not a requirement by the INFO format, single word strings should
; still be defined withing quotes, unless it represents an enum.
;


Application
{
    title "SDL Game"
    is_resizable false
}


Graphics
{
    ScreenResolution
    {
        w 1196
        h 768
    }
    is_vsync true
    is_fullscreen false
    is_opengl_debug_enabled false
}

Logger
{
    ;; Valid values: DEBUG > INFO > WARN > ERROR > NONE
    stream_level DEBUG
    file_level   DEBUG
    file_filename "runtime.log"
}