import os
common_env = Environment(ENV = {'PATH' : os.environ['PATH'],
                                'HOME' : os.environ['HOME'],
                                'TERM' : 'xterm'})

common_env.Append(CPPPATH = ['#/external/polyvox/library/PolyVoxCore/include',
                         '#/external/polyvox/library/PolyVoxUtil/include'])

common_env.VariantDir('#/build/polyvox/PolyVoxCore', 'library/PolyVoxCore')
common_env.SConscript('#/build/polyvox/PolyVoxCore/SConscript', {'env': common_env})

common_env.VariantDir('#/build/polyvox/PolyVoxUtil', 'library/PolyVoxUtil')
common_env.SConscript('#/build/polyvox/PolyVoxUtil/SConscript', {'env': common_env})
