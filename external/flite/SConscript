import os
common_env = Environment(ENV = {'PATH' : os.environ['PATH'],
                                'HOME' : os.environ['HOME'],
                                'TERM' : 'xterm'})

common_env.Append(CPPPATH = ['#/external/flite/include/'])

common_env.VariantDir('#/build/flite/src', 'src')
common_env.SConscript('#/build/flite/src/SConscript', {'env': common_env})

common_env.VariantDir('#/build/flite/lang', 'lang')
common_env.SConscript('#/build/flite/lang/SConscript', {'env': common_env})

common_env.VariantDir('#/build/flite/main', 'main')
common_env.SConscript('#/build/flite/main/SConscript', {'env': common_env})
