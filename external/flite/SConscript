Import('env')

env.Append(CPPPATH = ['#/external/flite/include/'])

env.VariantDir('#/build/flite/src', 'src')
env.SConscript('#/build/flite/src/SConscript', {'env': env})

env.VariantDir('#/build/flite/lang', 'lang')
env.SConscript('#/build/flite/lang/SConscript', {'env': env})

env.VariantDir('#/build/flite/main', 'main')
env.SConscript('#/build/flite/main/SConscript', {'env': env})
